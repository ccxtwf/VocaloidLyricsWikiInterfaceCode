{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    "module": "nodenext",
    "moduleResolution": "nodenext",

    "allowJs": true,
    "checkJs": false,
    "noEmit": false,
    "noEmitOnError": false,

    "outDir": "build",

    /* Linting */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedSideEffectImports": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": false
  },
  "include": ["dev-utils/*", "plugins/*", "gadgets/*"]
}