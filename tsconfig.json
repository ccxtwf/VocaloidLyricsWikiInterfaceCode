{
  "compilerOptions": {
    "target": "es2015",
    "useDefineForClassFields": true,
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    "module": "nodenext",
    "moduleResolution": "nodenext",

    "allowJs": true,
    "checkJs": false,
    "noEmit": false,
    "noEmitOnError": false,

    "outDir": "build",

    "typeRoots": [
      "./node_modules/@types", 
      "./node_modules/types-mediawiki", 
      "./node_modules/@vue"
    ],
    
    /* Linting */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedSideEffectImports": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": false
  },
  "include": ["dev-utils/**/*", "plugins/**/*", "src/**/*"]
}